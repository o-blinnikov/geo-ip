<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <test_geoip translate="label" module="test_geoip">
            <label>GeoIP Extension</label>
            <sort_order>100</sort_order>
        </test_geoip>
    </tabs>
    <sections>
        <test_geoip translate="label" module="test_geoip">
            <label>GeoIP Popup</label>
